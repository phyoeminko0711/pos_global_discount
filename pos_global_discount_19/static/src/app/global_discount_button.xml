<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_global_discount.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath
            expr="//t[@t-if='props.showRemainingButtons']/div/button[hasclass('o_pricelist_button')]"
            position="before">
            <button t-if="this.pos.cashier._role != 'minimal'"
                class="js_global_discount"
                t-att-class="buttonClass"
                t-on-click="() => this.clickGlobalDiscount()">
                <i class="fa fa-percent me-1"/>Global Discount
            </button>
        </xpath>
    </t>
</templates>