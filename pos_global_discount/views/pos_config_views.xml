<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_global_discount" model="ir.ui.view">
        <field name="name">pos.config.form.global.discount</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='other_devices']" position="after">
                <setting help="Allow global discount (percentage or fixed amount) on orders">
                    <field name="enable_global_discount"/>
                    <div class="content-group mt16" invisible="not enable_global_discount">
                        <div class="row">
                            <label for="discount_product_id" class="col-lg-3 o_light_label"/>
                            <field name="discount_product_id"
                                   required="enable_global_discount"/>
                        </div>
                    </div>
                    <div class="content-group mt16" invisible="not enable_global_discount">
                        <div class="row">
                            <label for="max_discount_percentage"
                                   string="Max Discount (%)"
                                   class="col-lg-3 o_light_label"/>
                            <field name="max_discount_percentage"/>
                        </div>
                    </div>
                    <div class="content-group mt16" invisible="not enable_global_discount">
                        <div class="row">
                            <label for="max_discount_amount"
                                   string="Max Discount Amount"
                                   class="col-lg-3 o_light_label"/>
                            <field name="max_discount_amount"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>